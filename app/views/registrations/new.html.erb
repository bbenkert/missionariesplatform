<% content_for :title, "Sign Up" %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <%= link_to root_path, class: "text-3xl font-bold text-blue-600" do %>
        Missionary Platform
      <% end %>
    </div>
    <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
      Create your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign in here", sign_in_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: @user, url: sign_up_path, local: true, class: "space-y-6" do |form| %>
        
        <!-- Display errors if any -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, 
                               required: true, 
                               autofocus: true,
                               autocomplete: "name",
                               class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, 
                                required: true,
                                autocomplete: "email",
                                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :role, "Account Type", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :role, 
                           options_for_select([
                             ['Supporter - Follow and support missionaries', 'supporter'],
                             ['Missionary - Share ministry updates and connect with supporters', 'missionary']
                           ], @user.role),
                           { prompt: 'Select your role...' },
                           { required: true, class: "block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>
          <p class="mt-1 text-xs text-gray-600">This helps us customize your experience on the platform.</p>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password, 
                                   required: true,
                                   autocomplete: "new-password",
                                   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          <p class="mt-1 text-xs text-gray-600">Must be at least 8 characters long.</p>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password_confirmation, 
                                   required: true,
                                   autocomplete: "new-password",
                                   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :terms_accepted, 
                            { required: true },
                            { class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" } %>
          <%= form.label :terms_accepted, class: "ml-2 block text-sm text-gray-900" do %>
            I agree to the 
            <%= link_to "Terms of Service", "#", class: "text-blue-600 hover:text-blue-500" %> 
            and 
            <%= link_to "Privacy Policy", "#", class: "text-blue-600 hover:text-blue-500" %>
          <% end %>
        </div>

        <div>
          <%= form.submit "Create Account", 
                         class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Information about approval process -->
    <div class="mt-8 bg-blue-50 rounded-lg p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Account Approval</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Missionary accounts require approval to ensure the safety and authenticity of our platform. You'll receive an email notification once your account is approved.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
