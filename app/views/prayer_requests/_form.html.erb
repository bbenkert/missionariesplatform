<%= form_with model: prayer_request, local: true, class: "space-y-6" do |form| %>
  <% if prayer_request.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There <%= prayer_request.errors.count == 1 ? 'was' : 'were' %> 
            <%= pluralize(prayer_request.errors.count, 'error') %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% prayer_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, 
        placeholder: "Give your prayer request a clear, concise title",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">
      This will be the main headline for your prayer request (max 255 characters)
    </p>
  </div>

  <div>
    <%= form.label :urgency, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :urgency,
        [
          ['Low - General prayer support', 'low'],
          ['Medium - Ongoing need or concern', 'medium'],
          ['High - Urgent situation requiring immediate prayer', 'high']
        ],
        { prompt: 'Select urgency level' },
        { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <div>
    <%= form.label :body, "Prayer Request Details", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :body, 
        rows: 8,
        placeholder: "Please share the details of your prayer request. Include specific ways people can pray for you, any background context, and how this relates to your ministry work.",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">
      Provide clear, specific details so others know how to pray effectively (max 5000 characters)
    </p>
  </div>

  <div>
    <%= form.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :tag_list, 
        value: prayer_request.tag_list,
        placeholder: "healing, ministry, travel, evangelism, family",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">
      Add tags separated by commas to help others find and filter prayer requests by topic
    </p>
  </div>

  <% if prayer_request.persisted? %>
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status,
          [
            ['Open - Still need prayer', 'open'],
            ['Answered - Prayer has been answered', 'answered'],
            ['Closed - No longer need prayer', 'closed']
          ],
          {},
          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      <p class="mt-1 text-sm text-gray-500">
        Update the status to let others know the current state of this prayer request
      </p>
    </div>
  <% end %>

  <div class="flex justify-between pt-6 border-t border-gray-200">
    <%= link_to prayer_request.persisted? ? prayer_request : prayer_requests_path, 
        class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-md" do %>
      Cancel
    <% end %>
    
    <%= form.submit prayer_request.persisted? ? "Update Prayer Request" : "Share Prayer Request", 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md ml-4" %>
  </div>
<% end %>
