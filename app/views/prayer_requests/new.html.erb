<% content_for :title, "New Prayer Request" %>

<div class="container mx-auto px-4 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to prayer_requests_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Prayer Requests
    <% end %>
  </div>

  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">Share a Prayer Request</h1>
        <p class="mt-1 text-gray-600">
          Let the community know how they can pray for you and your ministry.
        </p>
      </div>

      <div class="px-6 py-6">
        <%= render 'form', prayer_request: @prayer_request %>
      </div>
    </div>
  </div>
</div>
