<%# Supporter Dashboard %>
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">
              Welcome back, <%= current_user.name %>
            </h1>
            <p class="text-gray-600 mt-1">Your supporter dashboard</p>
          </div>
          <div class="flex items-center space-x-4">
            <%= link_to missionaries_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Follow More Missionaries
            <% end %>
          </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-6">
          <div class="bg-gradient-to-r from-blue-500 to-blue-600 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-blue-100 truncate">Following</dt>
                    <dd class="text-lg font-medium text-white"><%= @stats[:following_count] %></dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-r from-green-500 to-green-600 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-green-100 truncate">Recent Updates</dt>
                    <dd class="text-lg font-medium text-white"><%= @stats[:total_updates] %></dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-r from-purple-500 to-purple-600 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-purple-100 truncate">Prayer Requests</dt>
                    <dd class="text-lg font-medium text-white"><%= @stats[:total_prayer_requests] %></dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-r from-orange-500 to-orange-600 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"></path>
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-orange-100 truncate">Prayers Offered</dt>
                    <dd class="text-lg font-medium text-white"><%= @stats[:prayers_offered] %></dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      
      <!-- Left Column - Updates Feed -->
      <div class="flex-1 lg:w-2/3">
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-gray-900 flex items-center">
                <svg class="h-5 w-5 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                Latest Updates
              </h2>
              <%= link_to "View All Updates", missionaries_path, 
                  class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium" %>
            </div>
          </div>

          <div class="divide-y divide-gray-200">
            <% if @latest_updates.any? %>
              <% @latest_updates.each do |update| %>
                <article class="p-6 hover:bg-gray-50 transition-colors duration-200">
                  <div class="flex space-x-3">
                    <div class="flex-shrink-0">
                      <% if update.user.avatar.attached? %>
                        <%= image_tag update.user.avatar, class: "h-10 w-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                          <span class="text-sm font-medium text-indigo-600">
                            <%= update.user.name.first %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center justify-between">
                        <p class="text-sm font-medium text-gray-900">
                          <%= link_to update.user.name, missionary_path(update.user), 
                              class: "hover:text-indigo-600 transition-colors duration-200" %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <%= time_ago_in_words(update.created_at) %> ago
                        </p>
                      </div>
                      <h3 class="text-base font-semibold text-gray-900 mt-1">
                        <%= update.title %>
                      </h3>
                      <div class="mt-2 text-sm text-gray-700">
                        <%= truncate(strip_tags(update.content), length: 200) %>
                      </div>
                      <div class="mt-3 flex items-center space-x-4">
                        <%= link_to missionary_update_path(update.user, update), 
                            class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium flex items-center" do %>
                          <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                          Read More
                        <% end %>
                      </div>
                    </div>
                  </div>
                </article>
              <% end %>
            <% elsif @stats[:following_count] == 0 %>
              <div class="p-8 text-center">
                <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-gray-900">Start your journey</h3>
                <p class="mt-2 text-sm text-gray-500 max-w-sm mx-auto">
                  You're not following any missionaries yet. Discover missionaries around the world and start supporting them in prayer and encouragement.
                </p>
                <%= link_to "Find Missionaries", missionaries_path, 
                    class: "mt-6 inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
              </div>
            <% else %>
              <div class="p-8 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                <h3 class="mt-4 text-sm font-medium text-gray-900">No recent updates</h3>
                <p class="mt-2 text-sm text-gray-500">
                  The missionaries you follow haven't posted any updates recently.
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column - Prayer Requests -->
      <div class="lg:w-1/3">
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900 flex items-center">
              <svg class="h-5 w-5 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              Prayer Requests
            </h2>
          </div>

          <div class="divide-y divide-gray-200 max-h-96 overflow-y-auto">
            <% if @latest_prayer_requests.any? %>
              <% @latest_prayer_requests.each do |prayer_request| %>
                <div class="p-4 hover:bg-gray-50 transition-colors duration-200">
                  <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                      <% if prayer_request.missionary_profile.user.avatar.attached? %>
                        <%= image_tag prayer_request.missionary_profile.user.avatar, class: "h-8 w-8 rounded-full object-cover" %>
                      <% else %>
                        <div class="h-8 w-8 rounded-full bg-purple-100 flex items-center justify-center">
                          <span class="text-xs font-medium text-purple-600">
                            <%= prayer_request.missionary_profile.user.name.first %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= prayer_request.missionary_profile.user.name %>
                      </p>
                      <p class="text-sm text-gray-600 mt-1">
                        <%= truncate(prayer_request.title, length: 60) %>
                      </p>
                      <div class="mt-2 flex items-center justify-between">
                        <% 
                          urgency_class = case prayer_request.urgency
                                         when 'high'
                                           'bg-red-100 text-red-800'
                                         when 'medium'
                                           'bg-yellow-100 text-yellow-800'
                                         else
                                           'bg-green-100 text-green-800'
                                         end
                        %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= urgency_class %>">
                          <%= prayer_request.urgency.humanize %> urgency
                        </span>
                        <div class="flex items-center space-x-2">
                          <%= form_with url: pray_prayer_request_path(prayer_request), method: :post, local: false, 
                              class: "inline-flex items-center", 
                              data: { 
                                controller: "prayer",
                                action: "submit->prayer#handleFormSubmit" 
                              } do %>
                            <button type="submit" data-prayer-target="button"
                                    data-disable-with: "ðŸ™"
                                    class="text-purple-600 hover:text-purple-800 transition-colors duration-200">
                              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"></path>
                              </svg>
                            </button>
                          <% end %>
                          <span class="text-xs text-gray-500" data-prayer-target="count">
                            <%= prayer_request.prayer_actions.count %> prayers
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <h3 class="mt-4 text-sm font-medium text-gray-900">No prayer requests</h3>
                <p class="mt-2 text-sm text-gray-500">
                  Prayer requests from missionaries you follow will appear here.
                </p>
              </div>
            <% end %>
          </div>
          
          <div class="px-6 py-4 border-t border-gray-200">
            <%= link_to prayer_requests_path, 
                class: "w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-purple-600 bg-purple-50 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200" do %>
              View All Prayer Requests
              <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="mt-6 bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
          </div>
          <div class="p-6 space-y-4">
            <%= link_to missionaries_path, 
                class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              Find Missionaries
            <% end %>

            <%= link_to conversations_path, 
                class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Messages
            <% end %>

            <%= link_to edit_profile_path, 
                class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Edit Profile
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
