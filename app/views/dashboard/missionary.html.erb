<% content_for :title, "Missionary Dashboard" %>

<div class="bg-gray-50 min-h-screen">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Welcome back, <%= current_user.name %>!</h1>
          <p class="text-gray-600 mt-1">Manage your ministry updates, prayer requests, and connect with supporters</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to new_update_path, 
                     class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Update
          <% end %>
          <%= link_to new_prayer_request_path, 
                     class: "bg-purple-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-purple-700 transition-colors" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            Prayer Request
          <% end %>
          <%= link_to missionary_settings_path, 
                     class: "bg-gray-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-700 transition-colors" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Statistics Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Updates</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:total_updates] %></p>
          </div>
        </div>
        <div class="mt-2">
          <span class="text-sm text-gray-500"><%= @monthly_stats[:updates_this_month] %> this month</span>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Prayer Requests</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:total_prayer_requests] %></p>
          </div>
        </div>
        <div class="mt-2">
          <span class="text-sm text-red-500"><%= @stats[:urgent_prayer_requests] %> urgent</span>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Followers</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:total_followers] %></p>
          </div>
        </div>
        <div class="mt-2">
          <span class="text-sm text-green-500"><%= @monthly_stats[:new_followers_this_month] %> new this month</span>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Messages</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @stats[:total_messages] %></p>
          </div>
        </div>
        <div class="mt-2">
          <%= link_to conversations_path, class: "text-sm text-blue-600 hover:text-blue-800" do %>
            View all →
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Recent Updates Column -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Recent Updates -->
        <div class="bg-white rounded-lg shadow-sm">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-gray-900">Recent Updates</h2>
              <%= link_to updates_path, class: "text-sm text-blue-600 hover:text-blue-800" do %>
                View all →
              <% end %>
            </div>
          </div>
          <div class="p-6">
            <% if @recent_updates.any? %>
              <div class="space-y-4">
                <% @recent_updates.first(5).each do |update| %>
                  <div class="border-l-4 border-blue-500 pl-4 py-2">
                    <div class="flex items-start justify-between">
                      <div>
                        <h3 class="font-medium text-gray-900">
                          <%= link_to update.title, missionary_update_path(current_user, update), 
                                     class: "hover:text-blue-600" %>
                        </h3>
                        <p class="text-sm text-gray-600 mt-1"><%= update.excerpt(100) %></p>
                        <div class="flex items-center mt-2 text-xs text-gray-500">
                          <span class="bg-gray-100 px-2 py-1 rounded-full mr-2">
                            <%= update.update_type.humanize %>
                          </span>
                          <span><%= time_ago_in_words(update.created_at) %> ago</span>
                          <% if update.is_urgent? %>
                            <span class="ml-2 bg-red-100 text-red-800 px-2 py-1 rounded-full">Urgent</span>
                          <% end %>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to edit_missionary_update_path(current_user, update), 
                                   class: "text-gray-400 hover:text-gray-600" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-gray-900 font-medium mb-2">No updates yet</h3>
                <p class="text-gray-600 mb-4">Share your first ministry update with your supporters</p>
                <%= link_to new_update_path, 
                           class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors" do %>
                  Create Your First Update
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Prayer Requests -->
        <div class="bg-white rounded-lg shadow-sm">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-gray-900">Prayer Requests</h2>
              <%= link_to prayer_requests_path, class: "text-sm text-blue-600 hover:text-blue-800" do %>
                View all →
              <% end %>
            </div>
          </div>
          <div class="p-6">
            <% if @prayer_requests.any? %>
              <div class="space-y-4">
                <% @prayer_requests.first(4).each do |prayer_request| %>
                  <div class="border-l-4 border-purple-500 pl-4 py-2">
                    <div class="flex items-start justify-between">
                      <div>
                        <h3 class="font-medium text-gray-900">
                          <%= link_to prayer_request.title, prayer_request_path(prayer_request), 
                                     class: "hover:text-purple-600" %>
                        </h3>
                        <p class="text-sm text-gray-600 mt-1"><%= truncate(prayer_request.body, length: 80) %></p>
                        <div class="flex items-center mt-2 text-xs text-gray-500">
                          <span><%= time_ago_in_words(prayer_request.created_at) %> ago</span>
                          <span class="mx-2">•</span>
                          <span><%= prayer_request.prayer_actions.count %> prayers</span>
                          <% if prayer_request.is_urgent? %>
                            <span class="ml-2 bg-red-100 text-red-800 px-2 py-1 rounded-full">Urgent</span>
                          <% end %>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to edit_prayer_request_path(prayer_request), 
                                   class: "text-gray-400 hover:text-gray-600" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <h3 class="text-gray-900 font-medium mb-2">No prayer requests yet</h3>
                <p class="text-gray-600 mb-4">Share your prayer needs with your supporters</p>
                <%= link_to new_prayer_request_path, 
                           class: "bg-purple-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-purple-700 transition-colors" do %>
                  Create Prayer Request
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar Column -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
          <div class="space-y-3">
            <%= link_to new_update_path, 
                       class: "w-full bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors flex items-center justify-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              New Update
            <% end %>
            <%= link_to new_prayer_request_path, 
                       class: "w-full bg-purple-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-purple-700 transition-colors flex items-center justify-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              Prayer Request
            <% end %>
            <%= link_to conversations_path, 
                       class: "w-full border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              View Messages
            <% end %>
            <%= link_to profile_path, 
                       class: "w-full border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Edit Profile
            <% end %>
          </div>
        </div>

        <!-- Recent Messages -->
        <div class="bg-white rounded-lg shadow-sm">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-gray-900">Recent Messages</h2>
              <%= link_to conversations_path, class: "text-sm text-blue-600 hover:text-blue-800" do %>
                View all →
              <% end %>
            </div>
          </div>
          <div class="p-6">
            <% if @recent_conversations.any? %>
              <div class="space-y-4">
                <% @recent_conversations.first(5).each do |conversation| %>
                  <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                      <% if conversation.sender.avatar.attached? %>
                        <%= image_tag conversation.sender.avatar, class: "w-8 h-8 rounded-full object-cover" %>
                      <% else %>
                        <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                          <span class="text-xs text-gray-600"><%= conversation.sender.name.first %></span>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <%= link_to conversation_path(conversation), class: "block hover:bg-gray-50 -m-2 p-2 rounded" do %>
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%= conversation.sender.name %>
                        </p>
                        <p class="text-sm text-gray-600 truncate">
                          <% if conversation.last_message %>
                            <%= truncate(conversation.last_message.content.to_s, length: 50) %>
                          <% else %>
                            New conversation
                          <% end %>
                        </p>
                        <p class="text-xs text-gray-500">
                          <%= time_ago_in_words(conversation.updated_at) %> ago
                        </p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <p class="text-sm text-gray-600">No messages yet</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Followers Summary -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Your Supporters</h2>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2"><%= @stats[:total_followers] %></div>
            <div class="text-sm text-gray-600 mb-4">Total Followers</div>
            
            <% if @followers.any? %>
              <div class="flex -space-x-2 justify-center mb-4">
                <% @followers.first(5).each do |follow| %>
                  <% if follow.user.avatar.attached? %>
                    <%= image_tag follow.user.avatar, class: "w-8 h-8 rounded-full border-2 border-white object-cover" %>
                  <% else %>
                    <div class="w-8 h-8 bg-gray-300 rounded-full border-2 border-white flex items-center justify-center">
                      <span class="text-xs text-gray-600"><%= follow.user.name.first %></span>
                    </div>
                  <% end %>
                <% end %>
                <% if @followers.count > 5 %>
                  <div class="w-8 h-8 bg-gray-100 rounded-full border-2 border-white flex items-center justify-center">
                    <span class="text-xs text-gray-600">+<%= @followers.count - 5 %></span>
                  </div>
                <% end %>
              </div>
            <% end %>
            
            <div class="text-xs text-gray-500">
              <%= @monthly_stats[:new_followers_this_month] %> new this month
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
