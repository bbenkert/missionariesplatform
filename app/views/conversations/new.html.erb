<% content_for :title, "New Message" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <%= link_to conversations_path, class: "text-blue-600 hover:text-blue-800" do %>
        <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Messages
      <% end %>
    </div>
    
    <h1 class="text-3xl font-bold text-gray-900">New Message</h1>
    <p class="text-gray-600">Send a message to <%= @recipient.name %></p>
  </div>

  <!-- Recipient Info -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <% if @recipient.avatar.attached? %>
          <%= image_tag @recipient.avatar, class: "h-10 w-10 rounded-full object-cover" %>
        <% else %>
          <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
            <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
        <% end %>
      </div>
      <div>
        <p class="text-sm font-medium text-blue-900">Messaging</p>
        <p class="text-lg font-semibold text-blue-800">
          <%= @recipient.name %>
          <% if @recipient.role == 'missionary' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2">
              Missionary
            </span>
          <% elsif @recipient.role == 'admin' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 ml-2">
              Admin
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-2">
              Supporter
            </span>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-6 py-6">
      <%= form_with model: @conversation, url: conversations_path, local: true, class: "space-y-6" do |form| %>
        <%= form.hidden_field :recipient_id, value: @recipient.id %>
        
        <!-- Message Content -->
        <div>
          <%= form.label :content, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :content, 
              placeholder: "Type your message here...",
              rows: 8,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-y" %>
          <p class="mt-1 text-sm text-gray-500">
            Be respectful and follow our community guidelines.
          </p>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="flex items-center space-x-4">
            <%= link_to "Cancel", conversations_path, 
                       class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
          
          <div class="flex items-center space-x-4">
            <%= form.submit "Send Message", 
                           class: "px-6 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Help Text -->
  <div class="mt-6 bg-gray-50 border border-gray-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-gray-700">
          <strong>Messaging Guidelines:</strong>
          Keep conversations respectful and on-topic. This messaging system is for connecting supporters with missionaries and facilitating prayer and ministry collaboration. 
          Inappropriate content will be reviewed by administrators.
        </p>
      </div>
    </div>
  </div>
</div>
