<div class="bg-white">
  <!-- Page Header -->
  <div class="bg-gray-50 px-4 py-5 border-b border-gray-200 sm:px-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Missionaries</h1>
        <p class="mt-1 text-sm text-gray-500">Manage missionaries from <%= @organization.name %></p>
      </div>
      <%= link_to "Back to Dashboard", organization_admin_dashboard_path, 
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white px-4 sm:px-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <%= link_to "All", organization_admin_missionaries_path,
                    class: "#{@filter == 'all' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Approved", organization_admin_missionaries_path(filter: 'approved'),
                    class: "#{@filter == 'approved' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Pending", organization_admin_missionaries_path(filter: 'pending'),
                    class: "#{@filter == 'pending' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Suspended", organization_admin_missionaries_path(filter: 'suspended'),
                    class: "#{@filter == 'suspended' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm" %>
      </nav>
    </div>
  </div>

  <!-- Missionaries List -->
  <div class="px-4 py-6 sm:px-6">
    <% if @missionaries.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul role="list" class="divide-y divide-gray-200">
          <% @missionaries.each do |missionary| %>
            <li>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if missionary.avatar.attached? %>
                        <%= image_tag missionary.avatar, class: "h-12 w-12 rounded-full" %>
                      <% else %>
                        <div class="h-12 w-12 rounded-full bg-gray-300 flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-700"><%= missionary.name.first %></span>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="flex items-center">
                        <p class="text-lg font-medium text-blue-600 truncate">
                          <%= link_to missionary.name, missionary_path(missionary.missionary_profile) %>
                        </p>
                        <div class="ml-2 flex-shrink-0 flex">
                          <% case missionary.status %>
                          <% when 'approved' %>
                            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                              Approved
                            </p>
                          <% when 'pending' %>
                            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                              Pending
                            </p>
                          <% when 'suspended' %>
                            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                              Suspended
                            </p>
                          <% when 'flagged' %>
                            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-orange-100 text-orange-800">
                              Flagged
                            </p>
                          <% end %>
                        </div>
                      </div>
                      <div class="mt-2 flex items-center text-sm text-gray-500">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <p class="truncate">
                          <%= missionary.missionary_profile.country %>
                          <% if missionary.missionary_profile.city.present? %>
                            â€¢ <%= missionary.missionary_profile.city %>
                          <% end %>
                        </p>
                      </div>
                      <div class="mt-1 flex items-center text-sm text-gray-500">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
                        </svg>
                        <p class="truncate">
                          <%= missionary.missionary_profile.ministry_focus %>
                        </p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-2">
                    <!-- Stats -->
                    <div class="text-right mr-4">
                      <p class="text-sm text-gray-500">Followers</p>
                      <p class="text-lg font-semibold text-gray-900">
                        <%= missionary.followers.count %>
                      </p>
                    </div>
                    <div class="text-right mr-4">
                      <p class="text-sm text-gray-500">Updates</p>
                      <p class="text-lg font-semibold text-gray-900">
                        <%= missionary.missionary_updates.published.count %>
                      </p>
                    </div>
                    
                    <!-- Actions -->
                    <div class="flex items-center space-x-2">
                      <%= link_to "View", missionary_path(missionary.missionary_profile), 
                                  class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
                    </div>
                  </div>
                </div>
                
                <!-- Bio Preview -->
                <% if missionary.missionary_profile.bio.present? %>
                  <div class="mt-4">
                    <p class="text-sm text-gray-600 line-clamp-2">
                      <%= truncate(missionary.missionary_profile.bio, length: 150) %>
                    </p>
                  </div>
                <% end %>
                
                <!-- Joined Date -->
                <div class="mt-4 flex items-center justify-between text-xs text-gray-500">
                  <span>Joined <%= missionary.created_at.strftime("%B %d, %Y") %></span>
                  <span>Last active <%= time_ago_in_words(missionary.current_sign_in_at || missionary.created_at) %> ago</span>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      
      <!-- Pagination -->
      <% if respond_to?(:paginate) && @missionaries.respond_to?(:current_page) %>
        <div class="mt-6">
          <%= paginate @missionaries %>
        </div>
      <% end %>
      
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">
          <% case @filter %>
          <% when 'approved' %>
            No approved missionaries
          <% when 'pending' %>
            No pending missionaries
          <% when 'suspended' %>
            No suspended missionaries
          <% else %>
            No missionaries found
          <% end %>
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          <% case @filter %>
          <% when 'approved' %>
            All missionaries have been approved.
          <% when 'pending' %>
            All missionaries have been reviewed.
          <% when 'suspended' %>
            No missionaries are currently suspended.
          <% else %>
            Get started by inviting missionaries to join your organization.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
