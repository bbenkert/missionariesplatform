<% content_for :title, "Sign In" %>

<div class="min-h-screen flex">
  <!-- Left side - Modern design with gradient -->
  <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-800 relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 20% 20%, white 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 flex flex-col justify-center px-12">
      <div class="max-w-md">
        <h1 class="text-4xl font-bold text-white mb-6">
          Welcome Back to the Mission
        </h1>
        <p class="text-xl text-blue-100 mb-8">
          Connect with missionaries worldwide and support their incredible work through prayer and encouragement.
        </p>
        
        <!-- Features list -->
        <div class="space-y-4">
          <div class="flex items-center text-blue-100">
            <div class="w-2 h-2 bg-blue-300 rounded-full mr-4"></div>
            <span>Stay updated with missionary work worldwide</span>
          </div>
          <div class="flex items-center text-blue-100">
            <div class="w-2 h-2 bg-purple-300 rounded-full mr-4"></div>
            <span>Join a community of prayer and support</span>
          </div>
          <div class="flex items-center text-blue-100">
            <div class="w-2 h-2 bg-indigo-300 rounded-full mr-4"></div>
            <span>Make a difference through digital connection</span>
          </div>
        </div>
        
        <!-- Testimonial -->
        <div class="mt-12 p-6 bg-white/10 backdrop-blur-sm rounded-xl border border-white/20">
          <p class="text-blue-100 italic mb-4">
            "This platform has transformed how we connect with our supporters. The prayer requests feature has been incredible for our ministry."
          </p>
          <div class="flex items-center">
            <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center mr-3">
              <span class="text-white font-semibold">MJ</span>
            </div>
            <div>
              <div class="text-white font-semibold">Maria Johnson</div>
              <div class="text-blue-200 text-sm">Missionary in Kenya</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right side - Login form -->
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm">
      <div class="text-center mb-8">
        <%= link_to root_path, class: "inline-flex items-center" do %>
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9c0 5-4 9-9 9m0 0a9 9 0 01-9-9m9 9c0-5 4-9 9-9m0 0a9 9 0 019 9"></path>
            </svg>
          </div>
          <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            Missionary Platform
          </span>
        <% end %>
      </div>
      
      <div>
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-2">Welcome back</h2>
        <p class="text-gray-600 text-center mb-8">
          Sign in to continue your journey
        </p>
      </div>
            <!-- Login Form -->
      <div class="bg-white py-8 px-8 shadow-xl rounded-2xl border border-gray-100">
        <%= form_with(scope: :user, url: session_path(:user), local: true, class: "space-y-6") do |form| %>
          <% if alert %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl relative" role="alert">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <%= alert %>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :email, "Email address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your email" %>
          </div>

          <div>
            <%= form.label :password, "Password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= form.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= form.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
              </div>
              <div class="text-sm">
                <%= link_to "Forgot password?", new_password_path(:user), 
                    class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.submit "Sign in", 
                class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-xl text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transform transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]" %>
          </div>

          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300" />
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-gray-500">New to the platform?</span>
              </div>
            </div>

            <div class="mt-6">
              <%= link_to new_user_registration_path, 
                  class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-xl shadow-sm bg-white text-sm font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:scale-[1.01]" do %>
                Create your account
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Additional Links -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          By signing in, you agree to our 
          <a href="#" class="text-blue-600 hover:text-blue-500 transition-colors duration-200">Terms of Service</a>
          and 
          <a href="#" class="text-blue-600 hover:text-blue-500 transition-colors duration-200">Privacy Policy</a>
        </p>
      </div>
    </div>
  </div>
</div>

      <div class="mt-6">
      
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">New to Missionary Platform?</span>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to new_user_registration_path, 
                     class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-blue-600 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            Create your account
          <% end %>
        </div>
      </div>
    </div>

    <!-- Role Information -->
    <div class="mt-8 bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Account Types</h3>
      <div class="space-y-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-blue-600 font-semibold text-sm">S</span>
            </div>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-gray-900">Supporter</h4>
            <p class="text-sm text-gray-600">Follow missionaries, receive updates, and send messages of encouragement.</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
              <span class="text-green-600 font-semibold text-sm">M</span>
            </div>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-gray-900">Missionary</h4>
            <p class="text-sm text-gray-600">Share your ministry journey, post updates, and connect with supporters.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
