<% content_for :title, "Profile - #{@user.name}" %>

<div class="bg-gray-50 min-h-screen">
  <!-- Profile Header -->
  <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center space-y-6 md:space-y-0 md:space-x-8">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          <div class="w-32 h-32 bg-white/20 rounded-full flex items-center justify-center">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "w-32 h-32 rounded-full object-cover" %>
            <% else %>
              <span class="text-5xl text-white"><%= @user.name.first %></span>
            <% end %>
          </div>
        </div>
        
        <!-- User Info -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold mb-2"><%= @user.name %></h1>
          <div class="flex items-center justify-center md:justify-start mb-4">
            <%= user_role_badge(@user) %>
            <span class="ml-3 text-lg text-blue-200">
              üìß <%= @user.email %>
            </span>
          </div>
          <div class="text-lg text-blue-200">
            ‚è∞ Member since <%= @user.created_at.strftime("%B %Y") %>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex-shrink-0">
          <%= link_to "Edit Profile", edit_profile_path, 
                     class: "bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Activity Overview -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Activity Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-blue-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-blue-600"><%= @user.following_count %></div>
              <div class="text-sm text-gray-600">Following</div>
            </div>
            <div class="bg-green-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-green-600"><%= @user.prayer_actions.count %></div>
              <div class="text-sm text-gray-600">Prayers</div>
            </div>
            <div class="bg-purple-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-purple-600"><%= @user.messages.count %></div>
              <div class="text-sm text-gray-600">Messages Sent</div>
            </div>
          </div>
        </div>

        <!-- Following Section -->
        <% if @user.followed_missionaries.any? || @user.legacy_followed_missionaries.any? %>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Following</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% (@user.followed_missionaries + @user.legacy_followed_missionaries).uniq.each do |missionary_profile| %>
                <% missionary = missionary_profile.is_a?(User) ? missionary_profile : missionary_profile.user %>
                <div class="flex items-center p-4 border border-gray-200 rounded-lg">
                  <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center mr-4">
                    <% if missionary.avatar.attached? %>
                      <%= image_tag missionary.avatar, class: "w-12 h-12 rounded-full object-cover" %>
                    <% else %>
                      <span class="text-lg text-gray-600"><%= missionary.name.first %></span>
                    <% end %>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-gray-900"><%= missionary.name %></h3>
                    <% if missionary.missionary_profile %>
                      <p class="text-sm text-gray-600"><%= missionary.missionary_profile.organization&.name %></p>
                      <p class="text-sm text-gray-500"><%= missionary.missionary_profile.location_display %></p>
                    <% end %>
                  </div>
                  <div>
                    <%= link_to "View", missionary_path(missionary), 
                               class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <div class="mt-6 text-center">
              <%= link_to "Find More Missionaries", missionaries_path, 
                         class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-blue-50 hover:bg-blue-100" %>
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-lg shadow-lg p-6 text-center">
            <div class="text-gray-400 text-6xl mb-4">üåç</div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Not Following Anyone Yet</h3>
            <p class="text-gray-600 mb-6">Discover missionaries around the world and start following their journey.</p>
            <%= link_to "Find Missionaries", missionaries_path, 
                       class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        <% end %>

        <!-- Recent Prayer Activity -->
        <% if @user.prayer_actions.any? %>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Prayer Activity</h2>
            <div class="space-y-4">
              <% @user.prayer_actions.includes(prayer_request: { missionary_profile: :user }).recent.limit(5).each do |prayer_action| %>
                <% prayer_request = prayer_action.prayer_request %>
                <% missionary = prayer_request.missionary_profile.user %>
                <div class="flex items-center p-4 border border-gray-200 rounded-lg">
                  <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center mr-4">
                    <% if missionary.avatar.attached? %>
                      <%= image_tag missionary.avatar, class: "w-10 h-10 rounded-full object-cover" %>
                    <% else %>
                      <span class="text-sm text-gray-600"><%= missionary.name.first %></span>
                    <% end %>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-medium text-gray-900"><%= truncate(prayer_request.title, length: 50) %></h4>
                    <p class="text-sm text-gray-600">for <%= missionary.name %></p>
                    <p class="text-xs text-gray-500"><%= time_ago_in_words(prayer_action.created_at) %> ago</p>
                  </div>
                  <div>
                    <%= link_to "View", prayer_request_path(prayer_request), 
                               class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <div class="mt-6 text-center">
              <%= link_to "View All Prayer Requests", prayer_requests_path, 
                         class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-blue-50 hover:bg-blue-100" %>
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-lg shadow-lg p-6 text-center">
            <div class="text-gray-400 text-6xl mb-4">üôè</div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Prayer Activity Yet</h3>
            <p class="text-gray-600 mb-6">Start praying for missionaries and their ministry needs.</p>
            <%= link_to "View Prayer Requests", prayer_requests_path, 
                       class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Account Information -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Account Information</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Role</dt>
              <dd class="text-sm text-gray-900 flex items-center">
                <%= user_role_badge(@user) %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="text-sm text-gray-900">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                           <%= @user.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= @user.status.humanize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Member Since</dt>
              <dd class="text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
            </div>
            <% if @user.organization %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Organization</dt>
                <dd class="text-sm text-gray-900"><%= @user.organization.name %></dd>
              </div>
            <% end %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Sign In</dt>
              <dd class="text-sm text-gray-900">
                <%= @user.current_sign_in_at ? time_ago_in_words(@user.current_sign_in_at) + " ago" : "Never" %>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <%= link_to "Edit Profile", edit_profile_path, 
                       class: "block w-full bg-blue-600 text-white text-center px-4 py-2 rounded-md hover:bg-blue-700 transition-colors" %>
            <%= link_to "Dashboard", dashboard_path, 
                       class: "block w-full bg-gray-100 text-gray-700 text-center px-4 py-2 rounded-md hover:bg-gray-200 transition-colors" %>
            <%= link_to "Find Missionaries", missionaries_path, 
                       class: "block w-full bg-gray-100 text-gray-700 text-center px-4 py-2 rounded-md hover:bg-gray-200 transition-colors" %>
            <%= link_to "Prayer Requests", prayer_requests_path, 
                       class: "block w-full bg-gray-100 text-gray-700 text-center px-4 py-2 rounded-md hover:bg-gray-200 transition-colors" %>
          </div>
        </div>

        <!-- Privacy Notice -->
        <div class="bg-blue-50 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Privacy</h3>
              <div class="mt-1 text-sm text-blue-700">
                <p>Your profile information is only visible to you. Your name and prayer activity may be visible to missionaries you follow.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
