<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Missionary Platform" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "actiontext", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <%= link_to root_path, class: "text-xl font-bold text-blue-600" do %>
                Missionary Platform
              <% end %>
            </div>
            <div class="hidden lg:ml-6 lg:flex lg:space-x-8">
              <%= link_to "Home", root_path, class: "text-gray-900 inline-flex items-center px-1 pt-1 text-sm font-medium" %>
              <%= link_to "Missionaries", missionaries_path, class: "text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium" %>
              <%= link_to "Prayer Requests", prayer_requests_path, class: "text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium" %>
            </div>
          </div>
          
          <div class="hidden lg:ml-6 lg:flex lg:items-center lg:space-x-4">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_path, class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
              <% if current_user.organization_admin? %>
                <%= link_to "Organization", organization_admin_dashboard_path, class: "text-purple-600 hover:text-purple-700 px-3 py-2 rounded-md text-sm font-medium font-semibold" %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to "Admin", admin_root_path, class: "text-red-600 hover:text-red-700 px-3 py-2 rounded-md text-sm font-medium font-semibold" %>
              <% end %>
              <%= link_to "Profile", profile_path, class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
                            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
            <% end %>
          </div>

          <!-- Mobile menu button -->
          <div class="lg:hidden flex items-center">
            <button type="button" class="mobile-menu-button text-gray-500 hover:text-gray-700 focus:outline-none focus:text-gray-700 p-2">
              <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                <path class="menu-icon" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zM4 11h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zM4 17h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
                <path class="close-icon hidden" d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="mobile-menu hidden lg:hidden">
          <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
            <%= link_to "Home", root_path, class: "text-gray-900 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
            <%= link_to "Missionaries", missionaries_path, class: "text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
            <%= link_to "Prayer Requests", prayer_requests_path, class: "text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
            
            <% if user_signed_in? %>
              <div class="border-t border-gray-200 pt-2 mt-2">
                <%= link_to "Dashboard", dashboard_path, class: "text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
                <% if current_user.organization_admin? %>
                  <%= link_to "Organization", organization_admin_dashboard_path, class: "text-purple-600 hover:text-purple-700 block px-3 py-2 text-base font-medium font-semibold hover:bg-gray-50" %>
                <% end %>
                <% if current_user.admin? %>
                  <%= link_to "Admin", admin_root_path, class: "text-red-600 hover:text-red-700 block px-3 py-2 text-base font-medium font-semibold hover:bg-gray-50" %>
                <% end %>
                <%= link_to "Profile", profile_path, class: "text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
                <div class="px-3 py-2">
                  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
                                class: "w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
                </div>
              </div>
            <% else %>
              <div class="border-t border-gray-200 pt-2 mt-2">
                <%= link_to "Sign In", new_user_session_path, class: "text-gray-500 hover:text-gray-700 block px-3 py-2 text-base font-medium hover:bg-gray-50" %>
                <div class="px-3 py-2">
                  <%= link_to "Sign Up", new_user_registration_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium text-center block" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <% flash.each do |type, message| %>
        <div class="<%= flash_class(type) %> px-4 py-3 mb-4">
          <%= message %>
        </div>
      <% end %>
      
      <%= yield %>
    </main>

    <footer class="bg-gray-800 text-white mt-20">
      <div class="max-w-7xl mx-auto py-12 px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Missionary Platform</h3>
            <p class="text-gray-300">Connecting missionaries with their support networks worldwide.</p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Links</h3>
            <ul class="space-y-2">
              <li><%= link_to "Home", root_path, class: "text-gray-300 hover:text-white" %></li>
              <li><%= link_to "Missionaries", missionaries_path, class: "text-gray-300 hover:text-white" %></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Support</h3>
            <p class="text-gray-300">Email: support@missionaryplatform.com</p>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center">
          <p class="text-gray-300">&copy; <%= Date.current.year %> Missionary Platform. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');
        const menuIcon = document.querySelector('.menu-icon');
        const closeIcon = document.querySelector('.close-icon');
        let isMenuOpen = false;

        function toggleMenu() {
          isMenuOpen = !isMenuOpen;
          
          if (isMenuOpen) {
            mobileMenu.classList.remove('hidden');
            menuIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
          } else {
            mobileMenu.classList.add('hidden');
            menuIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
          }
        }

        function closeMenu() {
          if (isMenuOpen) {
            isMenuOpen = false;
            mobileMenu.classList.add('hidden');
            menuIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
          }
        }

        // Toggle menu on button click
        if (mobileMenuButton) {
          mobileMenuButton.addEventListener('click', toggleMenu);
        }

        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
          if (isMenuOpen && mobileMenu && mobileMenuButton && 
              !mobileMenu.contains(event.target) && 
              !mobileMenuButton.contains(event.target)) {
            closeMenu();
          }
        });

        // Close menu on window resize to desktop
        window.addEventListener('resize', function() {
          if (window.innerWidth >= 1024 && isMenuOpen) {
            closeMenu();
          }
        });

        // Ensure menu is closed on initial load if desktop
        if (window.innerWidth >= 1024) {
          closeMenu();
        }

        // Close menu when clicking on mobile menu links
        if (mobileMenu) {
          const mobileMenuLinks = mobileMenu.querySelectorAll('a');
          mobileMenuLinks.forEach(link => {
            link.addEventListener('click', closeMenu);
          });
        }
      });
    </script>
  </body>
</html>
