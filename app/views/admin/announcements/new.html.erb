<% content_for :title, "Send Announcement" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to admin_root_path, class: "text-sm text-gray-600 hover:text-gray-900 mb-4 inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Dashboard
      <% end %>
      
      <h1 class="text-3xl font-bold text-gray-900 mt-2">Send Announcement</h1>
      <p class="mt-2 text-gray-600">Send a platform-wide announcement to users</p>
    </div>

    <div class="bg-white shadow-lg rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Announcement Details</h3>
      </div>

      <%= form_with url: admin_announcements_path, method: :post, class: "p-6 space-y-6" do |f| %>
        <!-- Title -->
        <div>
          <%= label_tag :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_field_tag :title, '', 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-transparent",
              placeholder: "Enter announcement title",
              required: true %>
        </div>

        <!-- Recipients -->
        <div>
          <%= label_tag :recipients, "Send To", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= select_tag :recipients, 
              options_for_select([
                ['All Users', 'all'],
                ['Missionaries Only', 'missionaries'],
                ['Supporters Only', 'supporters']
              ], 'all'),
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>

        <!-- Message -->
        <div>
          <%= label_tag :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_area_tag :message, '', 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-transparent",
              rows: 10,
              placeholder: "Enter your announcement message here...",
              required: true %>
          <p class="mt-2 text-sm text-gray-500">This message will be sent via email to the selected recipients.</p>
        </div>

        <!-- Preview -->
        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-purple-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="text-sm font-medium text-purple-900">Before you send</h4>
              <p class="text-sm text-purple-700 mt-1">
                Please review your message carefully. Once sent, this announcement cannot be recalled.
                Recipients will receive this via email.
              </p>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", admin_root_path, class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 font-medium" %>
          <%= submit_tag "Send Announcement", 
              class: "px-6 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 font-medium",
              data: { confirm: "Are you sure you want to send this announcement?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
