<% content_for :title, "Admin Dashboard" %>

<div class="min-h-screen bg-gray-50">
  <!-- Enhanced Header -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-white">Admin Dashboard</h1>
            <p class="mt-2 text-indigo-100">
              Platform management and analytics • Last updated <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
            <div class="mt-4 flex items-center space-x-6">
              <div class="flex items-center text-indigo-100">
                <% status_color = case @system_health[:status]
                   when 'healthy' then 'bg-green-400'
                   when 'degraded' then 'bg-yellow-400'
                   when 'critical' then 'bg-red-400'
                   else 'bg-gray-400'
                   end %>
                <div class="w-2 h-2 <%= status_color %> rounded-full mr-2 animate-pulse"></div>
                <span class="text-sm">System Status: <%= @system_health[:status].capitalize %></span>
                <% if @system_health[:issues].any? %>
                  <button type="button" 
                          class="ml-2 text-xs bg-white/20 hover:bg-white/30 px-2 py-1 rounded"
                          onclick="alert('<%= @system_health[:issues].join('\n') %>')">
                    <%= @system_health[:issues].length %> issue<%= @system_health[:issues].length > 1 ? 's' : '' %>
                  </button>
                <% end %>
              </div>
              <div class="flex items-center text-indigo-100">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <span class="text-sm">Active Sessions: <%= @active_sessions %></span>
              </div>
              <div class="flex items-center text-indigo-100 text-xs space-x-3">
                <span title="Database"><%= @system_health[:checks][:database] ? '✓ DB' : '✗ DB' %></span>
                <span title="Redis"><%= @system_health[:checks][:redis] ? '✓ Cache' : '✗ Cache' %></span>
                <span title="Storage"><%= @system_health[:checks][:storage] ? '✓ Storage' : '✗ Storage' %></span>
              </div>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-4">
            <%= link_to "View Site", root_path, 
                target: "_blank",
                class: "bg-white text-indigo-600 hover:bg-indigo-50 font-medium py-2 px-4 rounded-md transition-colors inline-flex items-center justify-center" %>
            
            <!-- Export Data Dropdown -->
            <div class="relative" data-controller="dropdown">
              <button type="button"
                      data-action="click->dropdown#toggle click@window->dropdown#hide"
                      class="bg-indigo-500 hover:bg-indigo-400 text-white font-medium py-2 px-4 rounded-md transition-colors inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Export Data
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <div data-dropdown-target="menu"
                   class="hidden absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
                <div class="py-1">
                  <%= link_to "Export All Users (CSV)", admin_exports_path(export_type: 'users'), 
                      method: :post,
                      data: { turbo_method: :post },
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "Export Missionaries (CSV)", admin_exports_path(export_type: 'missionaries'), 
                      method: :post,
                      data: { turbo_method: :post },
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "Export Prayer Requests (CSV)", admin_exports_path(export_type: 'prayer_requests'), 
                      method: :post,
                      data: { turbo_method: :post },
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "Export Dashboard (JSON)", admin_exports_path(export_type: 'dashboard'), 
                      method: :post,
                      data: { turbo_method: :post },
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Enhanced Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8"
      <!-- Enhanced Users Stats -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border-l-4 border-blue-500">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="text-sm font-medium text-gray-500">Total Users</div>
              <div class="text-2xl font-bold text-gray-900"><%= @total_users %></div>
              <div class="text-xs text-green-600 font-medium">
                +<%= @new_users_this_week || 0 %> this week
              </div>
            </div>
          </div>
          <div class="mt-4 flex justify-between text-sm">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
              <span class="text-gray-600">Missionaries: <%= @total_missionaries %></span>
            </div>
            <div class="flex items-center">
              <div class="w-2 h-2 bg-blue-400 rounded-full mr-2"></div>
              <span class="text-gray-600">Supporters: <%= @total_supporters %></span>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-3">
          <%= link_to "Manage Users", admin_users_path, class: "text-sm text-blue-700 hover:text-blue-900 font-medium flex items-center" %>
        </div>
      </div>

      <!-- Enhanced Missionaries Stats -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border-l-4 border-green-500">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="text-sm font-medium text-gray-500">Active Missionaries</div>
              <div class="text-2xl font-bold text-gray-900"><%= @approved_missionaries %></div>
              <div class="text-xs text-orange-600 font-medium">
                <%= @pending_missionaries %> pending approval
              </div>
            </div>
          </div>
          <div class="mt-4">
            <div class="flex justify-between text-sm text-gray-600">
              <span>This month: +<%= @new_missionaries_this_month || 0 %></span>
              <span>Avg/month: <%= @avg_missionaries_per_month || 0 %></span>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-3">
          <%= link_to "Manage Missionaries", admin_missionaries_path, class: "text-sm text-green-700 hover:text-green-900 font-medium flex items-center" %>
        </div>
      </div>

      <!-- Enhanced Prayer Requests Stats -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border-l-4 border-purple-500">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="text-sm font-medium text-gray-500">Prayer Requests</div>
              <div class="text-2xl font-bold text-gray-900"><%= @total_prayer_requests %></div>
              <div class="text-xs text-red-600 font-medium">
                <%= @urgent_prayer_requests %> urgent requests
              </div>
            </div>
          </div>
          <div class="mt-4">
            <div class="flex justify-between text-sm text-gray-600">
              <span>Active: <%= @open_prayer_requests %></span>
              <span>This week: +<%= @new_requests_this_week || 0 %></span>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-r from-purple-50 to-indigo-50 px-6 py-3">
          <%= link_to "Manage Prayer Requests", admin_prayer_requests_path, class: "text-sm text-purple-700 hover:text-purple-900 font-medium flex items-center" %>
        </div>
      </div>

      <!-- Enhanced Activity Stats -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border-l-4 border-yellow-500">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <div class="text-sm font-medium text-gray-500">Platform Activity</div>
              <div class="text-2xl font-bold text-gray-900"><%= @total_prayer_actions || 0 %></div>
              <div class="text-xs text-green-600 font-medium">
                Prayer actions taken
              </div>
            </div>
          </div>
          <div class="mt-4">
            <div class="flex justify-between text-sm text-gray-600">
              <span>Today: <%= @actions_today || 0 %></span>
              <span>Updates: <%= @total_updates || 0 %></span>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-r from-yellow-50 to-amber-50 px-6 py-3">
          <%= link_to "View Activity", admin_root_path, class: "text-sm text-yellow-700 hover:text-yellow-900 font-medium flex items-center" %>
        </div>
      </div>
    </div>

    <!-- Quick Actions Panel -->
    <div class="bg-white shadow-lg rounded-xl mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
        <p class="text-sm text-gray-500">Common administrative tasks</p>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <%= link_to new_admin_user_path, 
              class: "bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white p-4 rounded-lg transition-all duration-200 flex items-center space-x-3 shadow-md hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
            <span class="font-medium">Add User</span>
          <% end %>
          
          <%= link_to admin_approve_pending_path,
              class: "bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white p-4 rounded-lg transition-all duration-200 flex items-center space-x-3 shadow-md hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="font-medium">Approve Pending (<%= @pending_missionaries %>)</span>
          <% end %>
          
          <%= link_to new_admin_announcement_path,
              class: "bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white p-4 rounded-lg transition-all duration-200 flex items-center space-x-3 shadow-md hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
            <span class="font-medium">Send Announcement</span>
          <% end %>
          
          <%= link_to admin_flagged_content_path,
              class: "bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white p-4 rounded-lg transition-all duration-200 flex items-center space-x-3 shadow-md hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <span class="font-medium">Review Flagged</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Management Sections -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Recent Prayer Requests -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Recent Prayer Requests</h3>
          <%= link_to "View All", admin_prayer_requests_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
      <div class="px-6 py-4">
        <% if @recent_prayer_requests.any? %>
          <div class="space-y-3">
            <% @recent_prayer_requests.each do |prayer_request| %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-2">
                    <%= link_to truncate(prayer_request.title, length: 40), admin_prayer_request_path(prayer_request), 
                        class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                                 <%= case prayer_request.urgency
                                     when 'high' then 'bg-red-100 text-red-800'
                                     when 'medium' then 'bg-yellow-100 text-yellow-800'
                                     else 'bg-green-100 text-green-800'
                                     end %>">
                      <%= prayer_request.urgency.humanize %>
                    </span>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">
                    by <%= prayer_request.missionary_profile.user.name %> • 
                    <%= time_ago_in_words(prayer_request.created_at) %> ago •
                    <%= pluralize(prayer_request.prayer_count, 'prayer') %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-sm text-gray-500">No prayer requests yet</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Most Prayed For Requests -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Most Prayed For Requests</h3>
      </div>
      <div class="px-6 py-4">
        <% if @most_prayed_requests.any? %>
          <div class="space-y-3">
            <% @most_prayed_requests.each do |prayer_request| %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <%= link_to truncate(prayer_request.title, length: 40), admin_prayer_request_path(prayer_request), 
                        class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                    <span class="text-sm font-medium text-gray-900">
                      <%= pluralize(prayer_request.prayer_count, 'prayer') %>
                    </span>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">
                    by <%= prayer_request.missionary_profile.user.name %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-sm text-gray-500">No prayer requests yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Users -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Recent Users</h3>
          <%= link_to "View All", admin_users_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
      <div class="px-6 py-4">
        <div class="space-y-3">
          <% @recent_users.each do |user| %>
            <div class="flex items-center space-x-3">
              <img class="h-8 w-8 rounded-full" 
                   src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(user.name) %>&background=3B82F6&color=FFFFFF" 
                   alt="<%= user.name %>">
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= user.name %>
                  </p>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                               <%= case user.role
                                   when 'admin' then 'bg-red-100 text-red-800'
                                   when 'missionary' then 'bg-blue-100 text-blue-800'
                                   else 'bg-green-100 text-green-800'
                                   end %>">
                    <%= user.role.humanize %>
                  </span>
                </div>
                <p class="text-xs text-gray-500">
                  <%= user.email %> • <%= time_ago_in_words(user.created_at) %> ago
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Follows -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Follows</h3>
      </div>
      <div class="px-6 py-4">
        <% if @recent_follows.any? %>
          <div class="space-y-3">
            <% @recent_follows.each do |follow| %>
              <div class="flex items-center space-x-3">
                <img class="h-6 w-6 rounded-full" 
                     src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(follow.user.name) %>&background=3B82F6&color=FFFFFF" 
                     alt="<%= follow.user.name %>">
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-gray-900">
                    <span class="font-medium"><%= follow.user.name %></span>
                    started following
                    <span class="font-medium">
                      <% if follow.followable_type == 'MissionaryProfile' %>
                        <%= follow.followable.user.name %>
                      <% else %>
                        <%= follow.followable.name %>
                      <% end %>
                    </span>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= time_ago_in_words(follow.created_at) %> ago
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-sm text-gray-500">No follows yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
