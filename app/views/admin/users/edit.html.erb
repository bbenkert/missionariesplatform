<% content_for :title, "Edit User - #{@user.name}" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6 mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Edit User
          </h1>
          <p class="text-gray-600 mt-2">Modify user account settings and permissions</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to admin_user_path(@user), class: "flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-all duration-200" do %>
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Profile
          <% end %>
          <%= link_to admin_users_path, class: "flex items-center px-4 py-2 bg-indigo-100 text-indigo-700 rounded-xl hover:bg-indigo-200 transition-all duration-200" do %>
            <i class="fas fa-users mr-2"></i>
            All Users
          <% end %>
        </div>
      </div>
    </div>

    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-8" do |form| %>
      <!-- Basic Information -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-user text-white text-xl"></i>
          </div>
          <div>
            <h2 class="text-2xl font-semibold text-gray-900">Basic Information</h2>
            <p class="text-gray-600">Update user's personal details</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :bio, rows: 3, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>
        </div>
      </div>

      <!-- Account Settings -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-cog text-white text-xl"></i>
          </div>
          <div>
            <h2 class="text-2xl font-semibold text-gray-900">Account Settings</h2>
            <p class="text-gray-600">Manage account type and status</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :role, 
                options_for_select([
                  ['Supporter', 'supporter'],
                  ['Missionary', 'missionary'], 
                  ['Organization Admin', 'organization_admin'],
                  ['Admin', 'admin']
                ], @user.role), 
                { prompt: 'Select Role' }, 
                { class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" } %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status, 
                options_for_select([
                  ['Active', 'active'],
                  ['Pending', 'pending'],
                  ['Suspended', 'suspended'],
                  ['Inactive', 'inactive']
                ], @user.status), 
                { prompt: 'Select Status' }, 
                { class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" } %>
          </div>

          <div class="md:col-span-2">
            <div class="flex items-center">
              <%= form.check_box :email_verified, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= form.label :email_verified, "Email Verified", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
            <p class="text-xs text-gray-500 mt-1">Mark email as verified to allow full account access</p>
          </div>
        </div>
      </div>

      <!-- Location Information -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-teal-600 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-map-marker-alt text-white text-xl"></i>
          </div>
          <div>
            <h2 class="text-2xl font-semibold text-gray-900">Location Information</h2>
            <p class="text-gray-600">Update geographic details</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :city, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :city, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= form.label :country, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :country, class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= form.label :time_zone, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :time_zone, 
                options_for_select(ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }, @user.time_zone), 
                { prompt: 'Select Time Zone' }, 
                { class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" } %>
          </div>

          <div>
            <%= form.label :language, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :language, 
                options_for_select([
                  ['English', 'en'],
                  ['Spanish', 'es'],
                  ['French', 'fr'],
                  ['Portuguese', 'pt'],
                  ['German', 'de'],
                  ['Chinese', 'zh'],
                  ['Russian', 'ru'],
                  ['Arabic', 'ar']
                ], @user.language), 
                { prompt: 'Select Language' }, 
                { class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" } %>
          </div>
        </div>
      </div>

      <!-- Notification Preferences -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-600 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-bell text-white text-xl"></i>
          </div>
          <div>
            <h2 class="text-2xl font-semibold text-gray-900">Notification Preferences</h2>
            <p class="text-gray-600">Configure email notification settings</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <div class="flex items-center">
              <%= form.check_box :weekly_digest_enabled, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= form.label :weekly_digest_enabled, "Weekly Digest Email", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
            
            <div class="flex items-center">
              <%= form.check_box :prayer_request_notifications, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= form.label :prayer_request_notifications, "Prayer Request Notifications", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
          </div>

          <div class="space-y-4">
            <div class="flex items-center">
              <%= form.check_box :update_notifications, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= form.label :update_notifications, "Update Notifications", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
            
            <div class="flex items-center">
              <%= form.check_box :message_notifications, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <%= form.label :message_notifications, "Message Notifications", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Admin Actions -->
      <% if @user.role == 'missionary' %>
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center mr-4">
              <i class="fas fa-shield-alt text-white text-xl"></i>
            </div>
            <div>
              <h2 class="text-2xl font-semibold text-gray-900">Missionary Status</h2>
              <p class="text-gray-600">Manage missionary-specific settings</p>
            </div>
          </div>

          <div class="space-y-4">
            <% if @user.missionary_profile %>
              <div class="p-4 bg-blue-50 rounded-xl border border-blue-200">
                <h3 class="font-medium text-blue-900 mb-2">Missionary Profile Status</h3>
                <p class="text-blue-700 text-sm mb-3">
                  Status: <span class="font-medium"><%= @user.missionary_profile.status.humanize %></span>
                </p>
                <div class="flex space-x-3">
                  <% unless @user.missionary_profile.approved? %>
                    <%= link_to approve_missionary_admin_user_path(@user), method: :patch, 
                        class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-all duration-200",
                        data: { confirm: "Are you sure you want to approve this missionary?" } do %>
                      <i class="fas fa-check mr-2"></i>
                      Approve Missionary
                    <% end %>
                  <% end %>
                  <%= link_to admin_missionary_path(@user.missionary_profile), 
                      class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all duration-200" do %>
                    <i class="fas fa-user-check mr-2"></i>
                    View Missionary Profile
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="p-4 bg-gray-50 rounded-xl border border-gray-200">
                <h3 class="font-medium text-gray-900 mb-2">No Missionary Profile</h3>
                <p class="text-gray-600 text-sm">This user is marked as a missionary but has no profile created yet.</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Form Actions -->
      <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
        <div class="flex items-center justify-between">
          <div class="flex space-x-3">
            <% if @user.suspended? %>
              <%= link_to activate_admin_user_path(@user), method: :patch,
                  class: "inline-flex items-center px-6 py-3 bg-green-600 text-white rounded-xl hover:bg-green-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105",
                  data: { confirm: "Are you sure you want to activate this user?" } do %>
                <i class="fas fa-play mr-2"></i>
                Activate User
              <% end %>
            <% elsif @user.active? %>
              <%= link_to suspend_admin_user_path(@user), method: :patch,
                  class: "inline-flex items-center px-6 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105",
                  data: { confirm: "Are you sure you want to suspend this user?" } do %>
                <i class="fas fa-pause mr-2"></i>
                Suspend User
              <% end %>
            <% end %>
          </div>
          
          <div class="flex space-x-3">
            <%= link_to admin_users_path, 
                class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-all duration-200 font-medium" do %>
              Cancel
            <% end %>
            <%= form.submit "Save Changes", 
                class: "px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
