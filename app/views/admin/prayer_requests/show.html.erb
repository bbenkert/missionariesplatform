<% content_for :title, "Admin - #{@prayer_request.title}" %>

<div class="admin-header bg-white shadow mb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <%= link_to admin_prayer_requests_path, class: "text-gray-400 hover:text-gray-600" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Prayer Request Details</h1>
            <p class="mt-1 text-sm text-gray-500">
              Review and manage this prayer request
            </p>
          </div>
        </div>
        
        <div class="flex space-x-3">
          <%= link_to "View Public", prayer_request_path(@prayer_request), 
              target: "_blank",
              class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-md" %>
          <%= link_to "Delete", admin_prayer_request_path(@prayer_request), 
              method: :delete,
              data: { confirm: "Are you sure you want to delete this prayer request?" },
              class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Prayer Request Content -->
      <div class="bg-white shadow rounded-lg mb-8">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <!-- Status Badge -->
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                           <%= case @prayer_request.status
                               when 'open' then 'bg-green-100 text-green-800'
                               when 'answered' then 'bg-blue-100 text-blue-800'
                               when 'closed' then 'bg-gray-100 text-gray-800'
                               end %>">
                <%= @prayer_request.status.humanize %>
              </span>
              
              <!-- Urgency Badge -->
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                           <%= case @prayer_request.urgency
                               when 'high' then 'bg-red-100 text-red-800'
                               when 'medium' then 'bg-yellow-100 text-yellow-800'
                               else 'bg-green-100 text-green-800'
                               end %>">
                <%= @prayer_request.urgency.humanize %> Priority
              </span>
            </div>
            
            <div class="text-sm text-gray-500">
              Created <%= time_ago_in_words(@prayer_request.created_at) %> ago
            </div>
          </div>
          
          <h2 class="text-xl font-semibold text-gray-900 mt-3">
            <%= @prayer_request.title %>
          </h2>
        </div>
        
        <div class="px-6 py-6">
          <div class="prose max-w-none">
            <%= simple_format(@prayer_request.body) %>
          </div>
          
          <% if @prayer_request.tags.present? %>
            <div class="mt-6">
              <h4 class="text-sm font-medium text-gray-900 mb-2">Tags:</h4>
              <div class="flex flex-wrap gap-2">
                <% @prayer_request.tags.each do |tag| %>
                  <span class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-100 text-blue-700 rounded-full">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Prayer Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">
            Prayer Actions (<%= @prayer_actions.count %>)
          </h3>
        </div>
        
        <div class="px-6 py-6">
          <% if @prayer_actions.any? %>
            <div class="space-y-4">
              <% @prayer_actions.each do |prayer_action| %>
                <div class="flex items-center space-x-3">
                  <img class="h-8 w-8 rounded-full" 
                       src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(prayer_action.user.name) %>&background=3B82F6&color=FFFFFF" 
                       alt="<%= prayer_action.user.name %>">
                  <div class="flex-1">
                    <div class="flex items-center space-x-2">
                      <span class="font-medium text-gray-900">
                        <%= prayer_action.user.name %>
                      </span>
                      <span class="text-gray-500">
                        (<%= prayer_action.user.role.humanize %>)
                      </span>
                      <% if prayer_action.user.organization %>
                        <span class="text-gray-400">
                          â€¢ <%= prayer_action.user.organization.name %>
                        </span>
                      <% end %>
                    </div>
                    <div class="text-sm text-gray-500">
                      Prayed <%= time_ago_in_words(prayer_action.created_at) %> ago
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No prayers yet</h3>
              <p class="mt-1 text-sm text-gray-500">
                Be the first to pray for this request.
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-8">
      <!-- Missionary Info -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Missionary</h3>
        </div>
        <div class="px-6 py-6">
          <div class="flex items-center space-x-3">
            <img class="h-10 w-10 rounded-full" 
                 src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(@prayer_request.missionary_profile.user.name) %>&background=3B82F6&color=FFFFFF" 
                 alt="<%= @prayer_request.missionary_profile.user.name %>">
            <div class="flex-1">
              <h4 class="font-medium text-gray-900">
                <%= @prayer_request.missionary_profile.user.name %>
              </h4>
              <p class="text-sm text-gray-500">
                <%= @prayer_request.missionary_profile.ministry_focus %>
              </p>
            </div>
          </div>
          
          <div class="mt-4 space-y-2">
            <div class="flex items-center text-sm text-gray-600">
              <svg class="flex-shrink-0 mr-2 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              <%= @prayer_request.missionary_profile.user.email %>
            </div>
            
            <% if @prayer_request.missionary_profile.user.organization %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="flex-shrink-0 mr-2 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm12 2H4v8h12V6z" clip-rule="evenodd"></path>
                </svg>
                <%= @prayer_request.missionary_profile.user.organization.name %>
              </div>
            <% end %>
            
            <div class="flex items-center text-sm text-gray-600">
              <svg class="flex-shrink-0 mr-2 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              <%= @prayer_request.missionary_profile.location_display.presence || "Location not specified" %>
            </div>
            
            <div class="flex items-center text-sm text-gray-600">
              <svg class="flex-shrink-0 mr-2 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              Safety Mode: <%= @prayer_request.missionary_profile.safety_mode.humanize %>
            </div>
          </div>
          
          <div class="mt-4 pt-4 border-t border-gray-200">
            <%= link_to "View Missionary Profile", admin_missionary_path(@prayer_request.missionary_profile), 
                class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        </div>
      </div>

      <!-- Admin Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Admin Actions</h3>
        </div>
        <div class="px-6 py-6">
          <%= form_with model: [:admin, @prayer_request], local: true, class: "space-y-4" do |form| %>
            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :status,
                  [
                    ['Open', 'open'],
                    ['Answered', 'answered'],
                    ['Closed', 'closed']
                  ],
                  {},
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
            </div>

            <div>
              <%= form.label :urgency, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :urgency,
                  [
                    ['Low Priority', 'low'],
                    ['Medium Priority', 'medium'],
                    ['High Priority', 'high']
                  ],
                  {},
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
            </div>

            <div class="pt-4">
              <%= form.submit "Update Prayer Request", 
                  class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Statistics -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Statistics</h3>
        </div>
        <div class="px-6 py-6">
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Total Prayers</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @prayer_request.prayer_count %>
              </span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Unique Prayers</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @prayer_request.praying_users.count %>
              </span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Created</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @prayer_request.created_at.strftime("%B %d, %Y") %>
              </span>
            </div>
            
            <% if @prayer_request.updated_at != @prayer_request.created_at %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Last Updated</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= @prayer_request.updated_at.strftime("%B %d, %Y") %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
